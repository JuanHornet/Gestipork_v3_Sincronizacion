<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Toolbar común -->
    <include
        layout="@layout/toolbar_estandar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Contenido principal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="?attr/actionBarSize"
        android:padding="16dp">

        <!-- Cabecera en CardView -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_header_lote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <!-- Parte superior: color, id_lote, animales -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- Círculo de color -->
                    <View
                        android:id="@+id/view_color_lote"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/circle_background"/>


                    <!-- id_lote y animales -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="start">

                        <TextView
                            android:id="@+id/text_nombre_lote"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="LOTE 1/25"
                            android:textSize="26sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_marginBottom="2dp" />

                        <TextView
                            android:id="@+id/text_n_animales"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="289 animales"
                            android:textSize="20sp"
                            android:textColor="@color/principal" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Raza y edad -->
                <TextView
                    android:id="@+id/text_raza_edad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ibérico 100% · Edad: 8 meses"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Alimentación en CardView -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_alimentacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <!-- Fila de cantidades -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:id="@+id/text_bellota"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="230"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:maxLines="1" />

                    <TextView
                        android:id="@+id/text_cebo_campo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="234"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:maxLines="1" />

                    <TextView
                        android:id="@+id/text_cebo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="89"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:maxLines="1" />

                </LinearLayout>

                <!-- Fila de etiquetas -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Bellota"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:maxLines="1" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="C.Campo"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:maxLines="1" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Cebo"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:maxLines="1" />
                </LinearLayout>

                <!-- Contenedor para centrar el botón y simular 80% ancho -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_cambiar_alimentacion"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:minHeight="40dp"
                        android:text="Cambiar alimentación"
                        android:textAllCaps="false"
                        android:textSize="14sp"
                        app:cornerRadius="12dp"
                        app:backgroundTint="@color/principal"
                        android:textColor="@android:color/white" />
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Sección gestión del lote -->
        <TextView
            android:id="@+id/text_titulo_gestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gestión del lote"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp" />

        <!-- Card: Acciones del lote -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_acciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:id="@+id/text_acciones_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Acciones del lote"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/text_acciones_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vacunas, destetes, tratamientos, etc."
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="2dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Card: Salidas del lote -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_salidas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:id="@+id/text_salidas_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Salidas del lote"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/text_salidas_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ventas, movimientos a otra explotación, etc."
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="2dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- El resto del espacio lo gestiona el propio LinearLayout, ya sin ViewPager -->
    </LinearLayout>

    <!-- Menú inferior con funcionalidades -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/menu_lote_bottom" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
