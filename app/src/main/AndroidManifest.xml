<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GestiPork_v3_Sincronizacion"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="false">
        </activity>
        <activity
            android:name=".ui.login.LoginActivity"
            android:windowSoftInputMode="adjustResize"
            android:exported="true">

            <!-- Launcher normal -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <!-- Deep link gestipork://auth -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <data android:scheme="gestipork" android:host="auth"/>
            </intent-filter>
        </activity>

        <activity
            android:name="com.example.gestipork_v3_sincronizacion.ui.explotaciones.MembersActivity"
            android:exported="false"
            android:label="Miembros"
            android:parentActivityName="com.example.gestipork_v3_sincronizacion.ui.dashboard.DashboardActivity" />

        <activity
            android:name=".ui.login.PostRegisterActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize"
            android:parentActivityName=".ui.login.LoginActivity" />


        <activity android:name=".ui.dashboard.DashboardActivity" android:exported="true"/>
        <activity
            android:name=".ui.login.RegisterActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize"
            android:parentActivityName=".ui.login.LoginActivity" />

    </application>

</manifest>